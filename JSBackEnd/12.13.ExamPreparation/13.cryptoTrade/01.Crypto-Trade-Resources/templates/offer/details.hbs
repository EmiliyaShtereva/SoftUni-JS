<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{coin.image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{coin.name}}</h1>
                <h3 id="payment">Payment method: {{coin.paymentMethod}}</h3>
                <p id="price"><span>Price: ${{coin.price}}</span></p>
                <p id="description">{{coin.description}}</p>
            </div>
            {{#if isAuthenticated}}
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->
                {{#if isOwner}}
                    <div class="author">
                        <a href="/offers/{{coin._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/offers/{{coin._id}}/delete" class="btn-delete">Delete</a>
                    </div>
                {{else}}
                <!-- Logged in user who has not yet buy this crypto-->
                    {{#if hasBought}}
                        <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                        <a href="/offers/{{coin._id}}/buy" class="btn-buy">Buy</a>
                    {{/if}}
                <!-- Logged in user who has already buy this crypto-->
                
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
</main>