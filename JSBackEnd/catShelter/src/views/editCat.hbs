<main>
    <form action="/cats-edit/{{cat._id}}" method="post" class="cat-form">
        <h2>Edit Cat</h2>
        <label for="name">Name</label>
        <input name="name" type="text" id="name" value="{{cat.name}}">
        <label for="description">Description</label>
        <textarea name="description"
            id="description">{{cat.description}}</textarea>
        <label for="image">Image</label>
        <input name="image" type="text" id="image" value="{{cat.imageUrl}}">
        <label for="group">Breed</label>
        <select name="breed" id="group">
            {{#each breeds}}
                <option value="{{breed}}">{{breed}}</option>
            {{/each}}
        </select>
        <button type="submit">Edit Cat</button>
    </form>
</main>